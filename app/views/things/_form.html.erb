<%= form_with model: @thing, local: true do |form| %>

  <div class='form'>
    <% if @thing.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@thing.errors.count, "error") %> prohibited
          this thing from being saved:
        </h2>
        <ul>
          <% @thing.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= form.label :text %><br>
      <% if params[:text] %>
        <%= form.text_field :text, placeholder: '4K 32" Dell Monitor', value: params[:text]  %>
      <% else %>
        <%= form.text_field :text, placeholder: '4K 32" Dell Monitor' %>
      <% end %>
    </p>

    <p>
      <%= form.label :link %><br>
      <% if params[:link] %>
        <%= form.text_field :link, placeholder: 'https://amazon.com', value: params[:link]  %>
      <% else %>
        <%= form.text_field :link, placeholder: 'https://amazon.com' %>
      <% end %>
    </p>

    <p>
      <%= form.label :wish_list, 'Wish list' %><br>
      <% if params[:link] %>
        <%= form.check_box :wish_list, checked: params[:wish_list].to_i.zero? || false, class: 'checkbox' %>
      <% else %>
        <%= form.check_box :wish_list, class: 'checkbox' %>
      <% end %>
    </p>

      <%= form.submit 'Save thing', class: 'btn' %>
  </div>
<% end %>