<!DOCTYPE html>
<html>
  <head>
    <title>UsesApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <p><%= current_user.name %></p>
      <% if current_user.profile_image %>
        <%= image_tag(current_user.profile_image, class: 'profile_image', size: '48x48', alt: current_user.name) %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
